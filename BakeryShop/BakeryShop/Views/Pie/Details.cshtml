@model Pie

@{
    var photoPath = Model.Image;
    if (!Uri.IsWellFormedUriString(Model.Image, UriKind.Absolute))
    {
        photoPath = "~/Images/" + Model.Image;
    }
}

<h2>@Model.Name</h2>

<div class="thumbnail row">
    <img alt="@Model.Name" src="@photoPath" asp-append-version="true" class="col-lg-6 img-delails">
    <div class="caption-full col-lg-6">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <p>@Model.AllergyInfo</p>
        <div class="addToCart">
            <p class="button center-block">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.PieId">
                    Add to shopping cart
                </a>
            </p>
        </div>
    </div>
</div>

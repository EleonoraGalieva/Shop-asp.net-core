@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Pie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Pies</a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Pie" asp-action="List" asp-route-currentCategory="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li>
            <a asp-controller="Pie" asp-action="List" asp-route-currentCategory="">All pies</a>
        </li>
    </ul>
</li>

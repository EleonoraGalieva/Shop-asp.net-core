@model ShoppingCartViewModel

<h2>Welcome to your shopping cart!</h2>
<h4>Here is everything you ordered!</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Pie</th>
            <th class="text-right">Price</th>
            <th class="text-right">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pie in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@pie.Amount</td>
                <td class="text-left">@pie.Pie.Name</td>
                <td class="text-right">@pie.Pie.Price.ToString("c")</td>
                <td class="text-right">@((pie.Amount*pie.Pie.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.Total.ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>

